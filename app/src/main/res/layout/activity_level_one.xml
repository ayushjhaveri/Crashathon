<?xml version="1.0" encoding="utf-8"?>
<ScrollView


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >






    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"

        android:gravity="center"
        android:layout_height="300dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        tools:context=".MainActivity">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <me.itangqi.waveloadingview.WaveLoadingView

            android:id="@+id/wlv_sunburn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:wlv_borderColor="@color/colorAccent"
            app:wlv_borderWidth="3dp"
            app:wlv_progressValue="40"
            app:wlv_shapeType="circle"
            app:wlv_round_rectangle="true"
            app:wlv_triangle_direction="north"
            app:wlv_titleCenterStrokeColor="@android:color/holo_blue_dark"
            app:wlv_titleCenterStrokeWidth="3dp"
            app:wlv_titleCenter="0 : 00"
            app:wlv_titleCenterColor="@android:color/white"
            app:wlv_titleCenterSize="12sp"
            app:wlv_titleBottom="Bugs:0/8 Score:0"
            app:wlv_titleBottomSize="8sp"
            app:wlv_titleBottomColor="@android:color/white"
            app:wlv_waveAmplitude="70"
            app:wlv_waveColor="@color/colorAccent"/>






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"

            android:textSize="40dp"
            android:layout_marginTop="30dp"
            android:text="REGISTER"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <EditText
                android:id="@+id/et1"
                android:layout_weight="10"
                android:layout_marginRight="5dp"
                android:layout_gravity="left"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Username:What's my name?" />

            <Button
                android:id="@+id/v1"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:text="validate"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:textSize="12dp"


                android:layout_weight="3.5"
                android:backgroundTint="@color/colorgreen">

            </Button>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="20dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="5"

                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/r1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:hint="Male"
                    tools:text="Male" />

                <TextView
                    android:layout_width="214dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:layout_weight="2"
                    android:gravity="right"

                    android:text="And now you"
                    android:textSize="20dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/r2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:hint="Female"
                    tools:text="Female" />

                <TextView
                    android:layout_width="214dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"


                    android:layout_weight="2"
                    android:gravity="left"

                    android:text=" accept us!!!"
                    android:textSize="20dp" />

            </LinearLayout>


            <Button
                android:id="@+id/v2"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:text="validate"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:textSize="12dp"


                android:layout_weight="3.5"
                android:backgroundTint="@color/colorgreen" >


            </Button>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="0dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">



            <EditText
                android:id="@+id/et2"
                android:layout_weight="10"

                android:inputType="numberDecimal"
                android:layout_marginRight="10dp"
                android:layout_gravity="left"
                android:gravity="center"


                android:layout_width="0dp"
                android:textSize="17dp"
                android:layout_height="wrap_content"
                android:hint="Age:sachin sachin !!!sachin sachin!!" />

            <Button

                android:layout_weight="3.5"
                android:id="@+id/v3"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorgreen"
                android:text="validate"
                android:layout_gravity="center"
                android:textSize="12dp"
                android:textColor="#fff"
                />



        </LinearLayout>
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_gravity="left"
                android:layout_weight="10"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent">

                <EditText
                    android:background="@color/colorAccent"
                    android:id="@+id/dday"
                    android:inputType="number"

                    android:layout_weight="0.8"
                    android:hint="01"
                    android:textSize="50sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="bottom"
                    android:layout_height="match_parent"
                    android:text="/"
                    android:textSize="60sp"
                    />
                <EditText
                    android:background="@color/colorAccent"
                    android:id="@+id/dmonth"
                    android:inputType="number"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:hint="12"
                    android:textSize="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />




            </LinearLayout>





            <Button

                android:id="@+id/v4"
                android:layout_weight="3.5"
                android:text="validate"
                android:textColor="#fff"
                android:layout_gravity="center"

                android:textSize="12dp"

                android:layout_width="0dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorgreen"/>





        </LinearLayout>
            <TextView
                android:id="@+id/et3"
                android:layout_weight="2"

                android:gravity="left"
                android:textSize="19dp"


                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Pick for a 'date'(You need to crash then) " />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <EditText
                android:id="@+id/et6"
                android:layout_weight="10"
                android:layout_gravity="left"

                android:layout_marginRight="0dp"
                android:gravity="center"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Why are you Single?(explain in one line)" />

            <Button
                android:id="@+id/v7"
                android:layout_gravity="center"
                android:layout_weight="3.5"
                android:text="validate"
                android:textColor="#fff"
                android:textSize="12dp"


                android:layout_width="0dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorgreen"/>





        </LinearLayout>




        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <EditText
                android:id="@+id/et4"
                android:layout_weight="10"
                android:layout_gravity="left"

                android:layout_marginRight="0dp"
                android:gravity="center"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Mobile No.:Gi'mme that number" />

            <Button
                android:id="@+id/v5"
                android:layout_gravity="center"
                android:layout_weight="3.5"
                android:text="validate"
                android:textColor="#fff"
                android:textSize="12dp"


                android:layout_width="0dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorgreen"/>





        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <EditText
                android:id="@+id/et5"
                android:layout_weight="10"
                android:inputType="number"

                android:layout_marginRight="0dp"
                android:gravity="center"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="4-digit pin" />

            <Button
                android:id="@+id/v6"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:text="validate"
                android:textColor="#fff"
                android:textSize="10dp"


                android:layout_width="0dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorgreen"/>







        </LinearLayout>







    </LinearLayout>


</ScrollView>
