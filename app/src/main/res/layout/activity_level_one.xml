<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#30425a"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <me.itangqi.waveloadingview.WaveLoadingView
            android:layout_centerHorizontal="true"
            android:id="@+id/wlv_sunburn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:wlv_borderColor="@color/colorAccent"
            app:wlv_borderWidth="3dp"
            app:wlv_progressValue="40"
            app:wlv_round_rectangle="true"
            app:wlv_shapeType="circle"
            app:wlv_titleBottom="Bugs:0/8 Score:0"
            app:wlv_titleBottomColor="@android:color/white"
            app:wlv_titleBottomSize="8sp"
            app:wlv_titleCenter="0 : 00"
            app:wlv_titleCenterColor="@android:color/white"
            app:wlv_titleCenterSize="12sp"
            app:wlv_titleCenterStrokeColor="@android:color/holo_blue_dark"
            app:wlv_titleCenterStrokeWidth="3dp"
            app:wlv_triangle_direction="north"
            app:wlv_waveAmplitude="70"
            app:wlv_waveColor="@color/colorAccent" />
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/instructions"
        android:src="@drawable/ic_info_white_24dp"/>
</RelativeLayout>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="300dp"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="REGISTER"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@color/black"
            android:elevation="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="20dp">


            <EditText
                android:id="@+id/et1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="5dp"
                android:layout_weight="10"
                android:textColor="#ffffff"
                android:gravity="center"
                android:backgroundTint="#757575"
                android:textColorHint="#757575"
                android:hint="Username:What's my name?" />

            <Button
                android:id="@+id/v1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="3.5"
                android:background="@drawable/greenround"
                android:text="validate"


                android:textColor="#ffffff"
                android:textSize="12dp">

            </Button>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="20dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="5"

                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/r1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:hint="Male"
                    android:textColor="#757575"
                    android:textColorHint="#ffffff"
                    tools:text="Male" />

                <TextView
                    android:layout_width="214dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:textColor="#ffffff"
                    android:text="And now you"
                    android:textSize="20dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/r2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:textColor="#757575"
                    android:textColorLink="#ffffff"
                    android:textColorHint="#ffffff"
                    android:hint="Female"
                    tools:text="Female" />

                <TextView
                    android:layout_width="214dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left"

                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:textColor="#ffffff"
                    android:text=" accept us!!!"
                    android:textSize="20dp" />

            </LinearLayout>


            <Button
                android:id="@+id/v2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="3.5"
                android:layout_marginTop="12.5dp"
                android:layout_marginBottom="12.5dp"

                android:text="validate"
                android:background="@drawable/greenround"


                android:textColor="#fff"
                android:textSize="12dp">


            </Button>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="10dp">


            <EditText
                android:id="@+id/et2"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="10dp"
                android:layout_weight="10"

                android:gravity="center"
                android:backgroundTint="#757575"
                android:textColorHint="#757575"
                android:hint="Age:How old am I?"
                android:inputType="numberDecimal"
                android:textSize="17dp" />

            <Button

                android:id="@+id/v3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="3.5"

                android:text="validate"
                android:background="@drawable/greenround"
                android:textColor="#fff"
                android:textSize="12dp" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginRight="10dp"
                    android:layout_weight="10">

                    <EditText
                        android:id="@+id/dday"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"

                        android:layout_weight="0.1"
                        android:background="@color/colorAccent"
                        android:gravity="center"
                        android:hint="01"
                        android:textColorHint="#ffffff"
                        android:inputType="number"
                        android:textSize="50sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:textColor="#ffffff"
                        android:text="/"
                        android:textSize="60sp" />

                    <EditText
                        android:id="@+id/dmonth"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_weight="0.1"
                        android:background="@color/colorAccent"
                        android:gravity="center"
                        android:hint="12"
                        android:textColorHint="#ffffff"
                        android:inputType="number"
                        android:textSize="50dp" />


                </LinearLayout>


                <Button

                    android:id="@+id/v4"
                    android:layout_width="90dp"
                    android:layout_marginBottom="12.5dp"
                    android:layout_marginTop="12.5dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/greenround"

                    android:text="validate"
                    android:textColor="#fff"
                    android:textSize="12dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/et3"
                android:layout_width="match_parent"

                android:layout_height="45dp"
                android:layout_weight="2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"

                android:gravity="left"
                android:textColor="#ffffff"
                android:text="Pick for a 'date'(You need to crash then) "
                android:textSize="19dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="20dp">


            <EditText
                android:id="@+id/et6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_gravity="left"
                android:layout_marginRight="0dp"
                android:layout_weight="10"

                android:gravity="center"
                android:backgroundTint="#757575"
                android:textColorHint="#757575"
                android:hint="Why are you Single?(explain in one line)"
                android:textSize="14sp" />

            <Button
                android:id="@+id/v7"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="3.5"

                android:background="@drawable/greenround"
                android:text="validate"
                android:textColor="#fff"
                android:textSize="12dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="20dp">


            <EditText
                android:id="@+id/et4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_gravity="left"
                android:layout_marginRight="0dp"
                android:backgroundTint="#757575"
                android:textColorHint="#757575"
                android:layout_weight="10"
                android:gravity="center"
                android:hint="Mobile No.:Gi'mme that number" />

            <Button
                android:id="@+id/v5"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="3.5"

                android:background="@drawable/greenround"
                android:text="validate"
                android:textColor="#fff"
                android:textSize="12dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="20dp">


            <EditText
                android:id="@+id/et5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="0dp"
                android:layout_weight="10"
                android:backgroundTint="#757575"
                android:textColorHint="#757575"
                android:gravity="center"
                android:hint="4-digit pin"
                android:inputType="number" />

            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/v6"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:background="@drawable/greenround"
                android:text="validate"
                android:textColor="#fff"
                android:textSize="10dp" />
        </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>

</LinearLayout>