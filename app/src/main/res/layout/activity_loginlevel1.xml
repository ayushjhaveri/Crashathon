<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Loginlevel1"
    android:orientation="vertical"
    android:background="	#30425A">
<ImageView
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:layout_gravity="center"
    android:src="@drawable/logo_transparentwhite"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"

        android:text="So,you think you can find bugs?\nLet's start easy"
        android:textAlignment="center"

        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@drawable/roundblack">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="Level 1"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/abhaya_libre_medium"
            android:paddingLeft="30dp"
            android:text="Enter nickname to start"
            android:textColor="#ffffff"

            android:textSize="20sp" />

        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:backgroundTint="#00E676"
            android:cursorVisible="true"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:focusable="true"
            android:textColor="@color/greenlight"
            android:padding="10dp"
            android:textCursorDrawable="@color/greenlight"
            android:inputType="textPersonName"/>

        <Button
            android:id="@+id/buttonlogin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/greenround"
            android:text="START"
            android:textColor="#ffffff" />
    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>